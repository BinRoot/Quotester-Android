<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:layout_marginTop="10dip"
		android:layout_marginBottom="10dip"
		android:background="#101010"
        android:minHeight="80dip">
		<ImageView 
		    android:id="@+id/image_target_item"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:background="@drawable/chatquote"
		    android:layout_alignParentLeft="true"
		    android:layout_centerVertical="true"/>
        <TextView 
		    android:id="@+id/text_target_item_content"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@id/image_target_item"
		    android:text="quote"
		    android:textSize="20dip"
		    android:layout_centerVertical="true"
		    android:layout_marginLeft="10dip"
		    android:layout_marginRight="90dip"/>
        <TextView 
		    android:id="@+id/text_target_item_author"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="by"
		    android:textStyle="italic"
		    android:textColor="#555555"
		    android:layout_below="@+id/text_target_item_date"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="10dip"/>
        <TextView 
		    android:id="@+id/text_target_item_date"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="date"
		    android:textColor="#555555"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="10dip"
		    android:layout_marginTop="5dip"/>
        <RelativeLayout 
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_target_item_author"
            android:layout_marginTop="10dip"
            android:layout_alignParentRight="true"
            android:visibility="gone">
            <ImageView 
                android:id="@+id/image_target_thumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/thumbsup"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dip"/>
            <TextView 
                android:id="@+id/text_target_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginRight="6dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/image_target_thumb"/>
        </RelativeLayout>
    </RelativeLayout>
	
</RelativeLayout>